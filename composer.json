{
    "name": "andkom/php-decimal",
    "description": "Arbitrary-precision decimal arithmetic library for PHP, built on top of bcmath.",
    "type": "library",
    "keywords": [
        "decimal",
        "bcmath",
        "math",
        "bigdecimal",
        "bignumber",
        "arbitrary-precision"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "AndKom\\Decimal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AndKom\\Decimal\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
